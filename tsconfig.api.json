{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2020",
    "outDir": "./dist-api",
    "rootDir": "./apps/api",
    "noEmit": false
  },
  "include": ["apps/api/**/*.ts"],
  "exclude": ["node_modules", "dist", "dist-api"]
}
